<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Dark Hawk Security</title>
    <link rel="stylesheet" href="~/css/site.css" />
</head>
<body style="background-color: #121212; color: white;">
    <!-- Dark theme background -->
    <!-- Header -->
    <header>
        <nav class="navbar navbar-expand-lg navbar-dark" style="background-color: #000;">
            <div class="container">
                <a class="navbar-brand" href="/">
                    <img src="~/images/darkhawk-logo.png" alt="Dark Hawk Security" height="50" />
                    Dark Hawk Security
                </a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarNav">
                    <ul class="navbar-nav ms-auto">
                        <li class="nav-item"><a class="nav-link" href="/">Home</a></li>
                        <li class="nav-item"><a class="nav-link" href="/About">About Us</a></li>
                        <li class="nav-item"><a class="nav-link" href="/Services">Services</a></li>
                        <li class="nav-item"><a class="nav-link" href="/Contact">Contact</a></li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>

    <!-- Main Content -->
    <main role="main" class="container mt-4">
        @RenderBody()
    </main>

    <!-- Footer -->
    <footer class="text-center mt-5" style="background-color: #000; padding: 20px; color: white;">
        <p>&copy; 2024 Dark Hawk Security | All Rights Reserved</p>
        <p>Contact: sanele.mbhele@darkhawk.co.za | Phone: 068 096 4807</p>
    </footer>

    @RenderSection("Scripts", required: false)
</body>
</html>
